<Window
    x:Class="PointsRounder.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PointsRounder"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PointsRounder"
    Width="364"
    Height="445"
    ResizeMode="NoResize"
    Topmost="true"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid Margin="0,0,2,0">
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label
            Width="112"
            Margin="10,378,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="ver. 10 2019-01-28" />
        <Grid Background="#FFE5E5E5">
            <TextBlock
                Width="216"
                Height="194"
                Margin="10,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontWeight="Bold"
                TextWrapping="Wrap">
                <Run Text="Round  Points Coordinates:" />
                <LineBreak />
                <Run Text="1. Custom Part" />
                <LineBreak />
                <Run Text="2. Contour Plate" />
                <LineBreak />
                <Run Text="3. Beam" />
                <LineBreak />
                <Run Text="4. Polybeam" />
                <LineBreak />
                <Run Text="5. Control Line" />
                <LineBreak />
                <Run Text="6. Rebar Group (start, end points and polygon points)" />
                <LineBreak />
                <Run Text="7. Boolean Part (contour plate and beam)" />
                <LineBreak />
                <Run Text="8. " />
                <Run Text="Component/Plugin Input Points" />
                <LineBreak />
                <Run Text="9. " />
                <Run Text="Brep" />
            </TextBlock>
            <Button
                x:Name="bt_RoundElements"
                Width="75"
                Height="20"
                Margin="65,247,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Button_Click_RoundElements"
                Content="Round"
                RenderTransformOrigin="0.52,0.117" />
            <TextBox
                x:Name="tb_CPartRound"
                Width="55"
                Height="20"
                Margin="10,205,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="5"
                TextWrapping="Wrap" />
            <Label
                Margin="65,203,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="mm" />
            <CheckBox
                x:Name="chk_X"
                Margin="10,233,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="X"
                IsChecked="True" />
            <CheckBox
                x:Name="chk_Y"
                Margin="10,251,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Y"
                IsChecked="True" />
            <CheckBox
                x:Name="chk_Z"
                Margin="10,267,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Z"
                IsChecked="True" />
        </Grid>
    </Grid>
</Window>
